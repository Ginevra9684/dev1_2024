@model AggiungiProdottoViewModel
@{
    ViewData["Title"] = "Aggiungi Prodotto";
}

<div class="container">
    <div class="row">
        <div class="col-lg-9 mx-auto rounded border p-3">
            <h1 class="text-center mb-5">@ViewData["Title"]</h1>
            <form asp-action="AggiungiProdotto" method="post" class="g-3">
                <div class="form-group row mb-3">
                    <label asp-for="Prodotto.Nome" class="col-sm-4 control-label">Nome</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Prodotto.Nome" placeholder="nome">
                        <i class="bi bi-exclamation-circle text-danger invalid-icon" style="display: none;"></i>
                        <i class="bi bi-check text-success valid-icon" style="display: none;"></i>
                        <span asp-validation-for="Prodotto.Nome" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label class="col-sm-4 control-label">Quantità</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Prodotto.Quantita" placeholder="quantità" >
                        <i class="bi bi-exclamation-circle text-danger invalid-icon" style="display: none;"></i>
                        <i class="bi bi-check text-success valid-icon" style="display: none;"></i>
                        <span asp-validation-for="Prodotto.Quantita" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label class="col-sm-4 control-label">Prezzo</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Prodotto.Prezzo" placeholder="prezzo" >
                        <i class="bi bi-exclamation-circle text-danger invalid-icon" style="display: none;"></i>
                        <i class="bi bi-check text-success valid-icon" style="display: none;"></i>
                        <span asp-validation-for="Prodotto.Prezzo" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label class="col-sm-4 control-label">Dettaglio</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Prodotto.Dettaglio" placeholder="dettaglio" >
                        <i class="bi bi-exclamation-circle text-danger invalid-icon" style="display: none;"></i>
                        <i class="bi bi-check text-success valid-icon" style="display: none;"></i>
                        <span asp-validation-for="Prodotto.Dettaglio" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3 center">
                    <label class="col-sm-4 control-label">Categoria</label>
                    <div class="col-sm-8">
                        <select class="form-select" asp-for="Prodotto.Categoria" >
                            <option value="">Seleziona categoria</option>
                            @foreach(var categoria in Model.Categorie)
                            {
                                <option value ="@categoria">@categoria</option>
                            }
                        </select>
                        <i class="bi bi-exclamation-circle text-danger invalid-icon" style="display: none;"></i>
                        <i class="bi bi-check text-success valid-icon" style="display: none;"></i>
                        <span asp-validation-for="Prodotto.Categoria" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label class="col-sm-4 control-label">Immagine</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Prodotto.Immagine" placeholder="immagine" >
                        <i class="bi bi-exclamation-circle text-danger invalid-icon" style="display: none;"></i>
                        <i class="bi bi-check text-success valid-icon" style="display: none;"></i>
                        <span asp-validation-for="Prodotto.Immagine" class="text-danger"></span>
                    </div>
                </div>
<!--
                <div class="form-group row mb-3 center">
                    <label class="col-sm-4 control-label" asp-for="Password">Password</label>
                    <div class="col-sm-8">
                        <input type="password" class="form-control" asp-for="Password" placeholder="codice" />
                        <i class="bi bi-exclamation-circle text-danger invalid-icon" style="display: none;"></i>
                        <i class="bi bi-check text-success valid-icon" style="display: none;"></i>
                        <span asp-validation-for="Password" class="text-danger"></span> 
                    </div>
                </div>
-->
                <div class="row">
                    <div class="offset-sm-4 col-sm-8">
                        <button asp-validation-summary="All" type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div> 
